{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "py: run main.py",
            "type": "shell",
            "command": "${command:python.interpreterPath} main.py"
        },
        {
            "label": "py: uninstall",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip uninstall am4utils -y"
        },
        {
            "label": "py: generate stubs",
            "type": "shell",
            "options": {
                "cwd": "src/am4utils"
            },
            "command": "${command:python.interpreterPath} generate-stubs.py"
        },
        {
            "label": "py: install",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip install --verbose \"src/am4utils/.[dev]\""
        },
        {
            "label": "py: reinstall",
            "dependsOrder": "sequence",
            "dependsOn": [
                "py: uninstall",
                "py: install",
                "py: generate stubs",
            ],
            "problemMatcher": []
        },
        {
            "label": "py: test",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pytest"
        }
    ]
}