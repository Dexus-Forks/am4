{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "py: run main.py",
            "type": "shell",
            "command": "${command:python.interpreterPath} main.py"
        },
        {
            "label": "py: uninstall",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip uninstall am4utils -y"
        },
        {
            "label": "py: generate stubs",
            "type": "shell",
            "options": {
                "cwd": "src/am4utils"
            },
            "command": "${command:python.interpreterPath} generate-stubs.py",
            "problemMatcher": []
        },
        {
            "label": "py: install",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pip install --verbose \"src/am4utils/.[dev]\" --config-settings=cmake.define.COPY_DATA=1"
        },
        {
            "label": "py: reinstall",
            "dependsOrder": "sequence",
            "dependsOn": [
                "py: uninstall",
                "py: install",
                "py: generate stubs"
            ],
            "problemMatcher": []
        },
        {
            "label": "py: test",
            "type": "shell",
            "command": "${command:python.interpreterPath} -m pytest"
        },
        {
            "label": "upload",
            "type": "shell",
            "command": "rsync -avz src/am4utils/build-vscode/{data,libduckdb.so,_core_executable} am4tools:/home/thiago/am4bot/build-vscode/",
            "problemMatcher": []
        },
        {
            "label": "delete database",
            "type": "shell",
            "command": "rm .venv/lib/python3.11/site-packages/am4utils/data/main_test.db .venv/lib/python3.11/site-packages/am4utils/data/main.db src/am4utils/build-vscode/data/main.db",
            "problemMatcher": []
        }
    ]
}